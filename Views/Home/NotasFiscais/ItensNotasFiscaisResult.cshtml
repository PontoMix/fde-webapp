@{
    ViewData["Title"] = "Resultado da Consulta detalhada de Notas Fiscais";
}

@model NotasFiscaisService.RetornarDadosItensNFE[]


<style>
    body {
        background-color: skyblue;
        font-family: Gadugi;
    }

    h1 {
        color: whitesmoke;
        font-family: 'Courier New';
        font-weight: 800;
        text-align: center;
        margin: 30px 0px 30px 0;
        text-align: center;
        text-shadow: 2px 2px 4px #000000;
    }

    table {
        border-collapse: collapse;
        width: 800px;
        margin: 0 auto;
        background-color: #E6F0F5;
        border-radius: 10px;
    }

    th, td {
        padding: 10px;
        text-align: center;
        font-weight: bold;
    }

    th {
        background-color: #0360AB;
        color: #FFFFFF;
    }

    tr:nth-child(even) {
        background-color: #F2F9FF;
    }

    tr:nth-child(odd) {
        background-color: #D5EAF7;
    }
</style>

@if (Model != null && Model.Length > 0)
{
    <h1>Resultado da Consulta detalhada de Notas Fiscais e Seus Itens</h1>

    <table>
        <tr>
            <th>ID do Produto Cadastrado</th>
            <th>ID do Item do Pedido</th>
            <th>Quantidade de Itens informado pelo Fornecedor na NF-e</th>
            <th>Mensagem</th>
            <th>Status</th>

        </tr>
        @foreach (var resultadonotasFiscaisDetalhada in Model)
        {
            <tr>
                <td>@resultadonotasFiscaisDetalhada.NumeroChaveNotaFiscal</td>
                <td>@resultadonotasFiscaisDetalhada.NumeroIdPedidoItem</td>
                <td>@resultadonotasFiscaisDetalhada.Num_QtdPedido</td>
                <td>@resultadonotasFiscaisDetalhada.Mensagem</td>
                <td>@resultadonotasFiscaisDetalhada.Status</td>
            </tr>
        }
    </table>
}
else
{
    <p>Nenhum resultado encontrado.</p>
}
