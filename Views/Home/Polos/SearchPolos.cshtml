@{
    ViewData["Title"] = "Pesquisar Polos";
}

<!--ESTILO DOS FORMULÁRIOS-->
<style>
    body {
        background-color: skyblue;
        font-family: Gadugi;
    }

    .page_title {
        color: whitesmoke;
        font-family: 'Courier New';
        font-weight: 800;
        text-align: center;
        margin: 30px 0px 30px 0;
        text-align: center;
        text-shadow: 2px 2px 4px #000000;
    }

    #form_pesquisarPolos {
        border: solid 10px;
        border-color: #0360AB;
        font-weight: 800;
        margin: 0 auto;
        width: 800px;
        height: 600px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #59B0F9;
        border-radius: 10px;
        padding: 20px;
    }

    input {
        margin: 20px 0px 30px 0px;
        width: 800px;
        height: 40px;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        border-radius: 5px;
        border-color: #B3DFFD;
    }

    .btn-primary {
        margin-top: 10px;
        font-weight: 800;
        width: 400px;
        height: 50px;
        border-radius: 5px;
        background-color: #AB221D;
        border: solid 5px;
        border-color: #89CFF0;
    }
</style>

<h1 class="page_title">Pesquisar Polos</h1>

<form id="form_pesquisarPolos" method="post" action="/Home/ProcessarPesquisaPolos">
    <div class="form-group">
        <label for="numeroAta">Número da Ata:</label>
        <input type="text" class="form-control" id="numeroAta" name="numeroAta" placeholder="xx/xxxxx/xx/xx-xxx" maxlength="18" />
    </div>
    <div class="form-group">
        <label for="numeroPolo">Número do Polo:</label>
        <input type="text" class="form-control" id="numeroPolo" name="numeroPolo"/>
    </div>
    <div class="form-group">
        <label for="ano">Ano:</label>
        <input type="text" class="form-control" id="ano" name="ano" placeholder="2023" maxlength="4" />
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>


<!--SCRIPTS PARA MANIPULAR OS FORMULÁRIOS E SEUS CAMPOS-->
<script>

    const input = document.querySelector('#numeroAta');

    input.addEventListener('keypress', () => {

        let inputlength = input.value.length

        if (inputlength === 2 || inputlength === 8 || inputlength === 11) {
            input.value += '/'
        } else if (inputlength === 14) {
            input.value += '-'
        }
    })

</script>