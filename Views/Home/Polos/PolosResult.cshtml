@{
    ViewData["Title"] = "Resultado da Pesquisa de Polos";
}

@model EntidadesService.Entidade[]


<style>
    body {
        background-color: skyblue;
        font-family: Gadugi;
    }

    h1 {
        color: whitesmoke;
        font-family: 'Courier New';
        font-weight: 800;
        text-align: center;
        margin: 30px 0px 30px 0;
        text-align: center;
        text-shadow: 2px 2px 4px #000000;
    }

    table {
        border-collapse: collapse;
        width: 800px;
        margin: 0 auto;
        background-color: #E6F0F5;
        border-radius: 10px;
    }

    th, td {
        padding: 10px;
        text-align: center;
        font-weight: bold;
    }

    th {
        background-color: #0360AB;
        color: #FFFFFF;
    }

    tr:nth-child(even) {
        background-color: #F2F9FF;
    }

    tr:nth-child(odd) {
        background-color: #D5EAF7;
    }
</style>

@if (Model != null && Model.Length > 0)
{
    <h1 id="title_search_result">Resultado da Pesquisa de Polos</h1>

    <div class="table-container">
        <table>
            <tr>
                <th>Nome do Polo</th>
                <th>Ano</th>
                <th>Número da Ata</th>
                <th>Descrição Status Polo</th>
                <th>Código da Entidade</th>
                <th>Nome da Entidade</th>
                <th>Mensagem</th>
                <th>Status</th>

                <!-- Adicione outras colunas conforme necessário -->
            </tr>
            @foreach (var polo in Model)
            {
                <tr>
                    <td>@polo.NomePolo</td>
                    <td>@polo.Ano</td>
                    <td>@polo.NumeroAta</td>
                    <td>@polo.DescricaoStatusPolo</td>
                    <td>@polo.CodEntidade</td>
                    <td>@polo.NomeEntidade</td>
                    <td>@polo.Mensagem</td>
                    <td>@polo.Status</td>

                    <!-- Adicione outras colunas conforme necessário -->
                </tr>
            }
        </table>
    </div>
}

else
{
    <p>Nenhum resultado encontrado.</p>
}
