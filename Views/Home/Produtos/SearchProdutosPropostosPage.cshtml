<h1 class="page_title" id="title_ata_search">Pesquisar Produtos Propostos pelo Fornecedor para atender Itens da Ata Vigente</h1>
<h1 class="page_title">(Cadastrados na Tabela Temporária e Em aguardo pelo ADM)</h1>
<form id="form_pesquisaProdutosProposto" method="post" action="/Home/ProcessarProdutosPropostos">
    <div class="form-group">
        <label for="NumeroAta">Número da Ata:</label>
        <input type="text" class="form-control" id="NumeroAta" name="NumeroAta" placeholder="xx/xxxxx/xx/xx-xxx" maxlength="18" />
    </div>
    <div class="form-group">
        <label for="NumeroPedido">Número do Pedido:</label>
        <input type="text" class="form-control" id="NumeroPedido" name="NumeroPedido" />
    </div>
    <div class="form-group">
        <label for="StatusProduto">Situação do Produto:</label>
        <select class="form-control" id="StatusProduto" name="StatusProduto">
            <option value="0">Default</option>
            <option value="1">Inativo</option>
            <option value="2">Ativo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>


<br />
<h1 class="page_title" id="title_ata_search">Pesquisar Produtos Propostos pelo Fornecedor</h1>
<h1 class="page_title">(Cadastrados na Tabela Permanente - já Moderados e Aceitos)</h1>

<form id="form_pesquisarProdutosPropostosLoja" method="post" action="/Home/ProcessarProdutosLoja">
    <div class="form-group">
        <label for="NumeroAta">Número da Ata:</label>
        <input type="text" class="form-control NumeroAtaPPF" id="NumeroAta" name="NumeroAta" placeholder="xx/xxxxx/xx/xx-xxx" maxlength="18" />
    </div>
    <div class="form-group">
        <label for="NumeroProduto">Número do Produto:</label>
        <input type="text" class="form-control" id="NumeroProduto" name="NumeroProduto" />
    </div>
    <div class="form-group">
        <label for="SituacaoProduto">Situação do Produto:</label>
        <select class="form-control" id="SituacaoProduto" name="SituacaoProduto">
            <option value="0">Default</option>
            <option value="1">Pendente de Aprovação</option>
            <option value="2">Aprovado</option>
            <option value="3">Negado</option>
            <option value="4">Ativo</option>
            <option value="5">Inativo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>


<!--SCRIPTS PARA MANIPULAR OS FORMULÁRIOS E SEUS CAMPOS-->
<script>

    const input = document.querySelector('#NumeroAta');

    input.addEventListener('keypress', () => {

        let inputlength = input.value.length

        if (inputlength === 2 || inputlength === 8 || inputlength === 11) {
            input.value += '/'
        } else if (inputlength === 14) {
            input.value += '-'
        }
    })

    const input2 = document.querySelector('.NumeroAtaPPF');

    input2.addEventListener('keypress', () => {

        let inputlength2 = input2.value.length

        if (inputlength2 === 2 || inputlength2 === 8 || inputlength2 === 11) {
            input2.value += '/'
        } else if (inputlength2 === 14) {
            input2.value += '-'
        }
    })
    
</script>