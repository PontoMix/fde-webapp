        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #59B0F9;
        border-radius: 10px;
        padding: 20px;
    }

    #form_pesquisarProdutosPropostosLoja {
        border: solid 10px;
        border-color: #0360AB;
