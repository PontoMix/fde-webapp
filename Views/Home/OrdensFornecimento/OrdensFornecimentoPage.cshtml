@{
    ViewData["Title"] = "Pesquisar Ordem de Fornecimento";
}

<!--ESTILO DOS FORMULÁRIOS-->
<style>
    body {
        background-color: skyblue;
        font-family: Gadugi;
    }

    .page_title {
        color: whitesmoke;
        font-family: 'Courier New';
        font-weight: 800;
        text-align: center;
        margin: 30px 0px 30px 0;
        text-align: center;
        text-shadow: 2px 2px 4px #000000;
    }

    #title_ata_search, #title_order_search {
        margin: 50px 0 30px 0;
    }

    #form_OF {
        border: solid 10px;
        border-color: #0360AB;
        font-weight: 800;
        margin: 0 auto;
        width: 800px;
        height: 600px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #59B0F9;
        border-radius: 10px;
        padding: 20px;
    }

    input {
        margin: 20px 0px 30px 0px;
        width: 800px;
        height: 40px;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        border-radius: 5px;
        border-color: #B3DFFD;
    }

    .btn-primary {
        margin-top: 10px;
        font-weight: 800;
        width: 400px;
        height: 50px;
        border-radius: 5px;
        background-color: #AB221D;
        border: solid 5px;
        border-color: #89CFF0;
    }
</style>



<!--FORMULÁRIO DE PESQUISA DE ATAS-->
<h1 class="page_title" id="title_ata_search">Pesquisar Ordem de Fornecimento</h1>

<form id="form_OF" method="post" action="/Home/ProcessarPesquisaOrdemFornecimento">
    <div class="form-group">
        <label for="NumeroOSOF">Número da Ordem de Fornecimento:</label>
        <input type="text" class="form-control" id="NumeroOSOF" name="NumeroOSOF" />
    </div>
    <div class="form-group">
        <label for="DtInicial">Data Inicial:</label>
        <input type="datetime-local" class="form-control" id="DtInicial" name="DtInicial" />
    </div>
    <div class="form-group">
        <label for="DtFinal">Data Final:</label>
        <input type="datetime-local" class="form-control" id="DtFinal" name="DtFinal" />
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>

