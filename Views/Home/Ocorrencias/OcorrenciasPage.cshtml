@{
    ViewData["Title"] = "Pesquisa e Atualização de Ocorrências";
}

<!--ESTILO DOS FORMULÁRIOS-->
<style>
    body {
        background-color: skyblue;
        font-family: Gadugi;
    }

    .page_title {
        color: whitesmoke;
        font-family: 'Courier New';
        font-weight: 800;
        text-align: center;
        margin: 30px 0px 30px 0;
        margin-top: 60px;
        text-align: center;
        text-shadow: 2px 2px 4px #000000;
    }

    #form_ocorrencias {
        border: solid 10px;
        border-color: #0360AB;
        font-weight: 800;
        margin: 0 auto;
        width: 800px;
        height: 500px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #59B0F9;
        border-radius: 10px;
        padding: 20px;
    }

    #form_atualizarOcorrencias {
        border: solid 10px;
        border-color: #0360AB;
        font-weight: 800;
        margin: 0 auto;
        margin-bottom: 400px;
        width: 800px;
        height: 400px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #59B0F9;
        border-radius: 10px;
        padding: 20px;
    }

    input {
        margin: 20px 0px 30px 0px;
        width: 800px;
        height: 40px;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        border-radius: 5px;
        border-color: #B3DFFD;
    }

    .btn-primary {
        margin-top: 10px;
        font-weight: 800;
        width: 400px;
        height: 50px;
        border-radius: 5px;
        background-color: #AB221D;
        border: solid 5px;
        border-color: #89CFF0;
    }
</style>



<!--FORMULÁRIO DE PESQUISA DE ATAS-->
<h1 class="page_title" id="title_ata_search">Pesquisar Ocorrência</h1>

<form id="form_ocorrencias" method="post" action="/Home/RetornarOcorrencias">
    <div class="form-group">
        <label for="NumeroPedido">Número do Pedido:</label>
        <input type="text" class="form-control" id="NumeroPedido" name="NumeroPedido" />
    </div>
    <div class="form-group">
        <label for="NumeroOSOF">Número da Ordem de Fornecimento:</label>
        <input type="text" class="form-control" id="NumeroOSOF" name="NumeroOSOF" />
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>



<h1 class="page_title" id="title_order_search">Atualizar Ocorrência</h1>

<form id="form_atualizarOcorrencias" method="post" action="/Home/ProcessarUpdateOcorrencias">
    <div class="form-group">
        <label for="NumeroOcorrencia">Número da Ocorrência:</label>
        <input type="text" class="form-control" id="NumeroOcorrencia" name="NumeroOcorrencia" />
    </div>
    <div class="form-group">
        <label for="statusOcorrencia">Status da Ocorrência:</label>
        <select class="form-control" id="statusOcorrencia" name="statusOcorrencia">
            <option value="0">Default</option>
            <option value="1">Resolvido</option>
            <option value="2">Pendente</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>
