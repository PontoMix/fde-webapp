@{
    ViewData["Title"] = "Resultado de Atualização da Ocorrência";
}

@model OcorrenciasService.ConfirmacaoOcorrencia


<style>
    body {
        background-color: skyblue;
        font-family: Gadugi;
    }

    h1 {
        color: whitesmoke;
        font-family: 'Courier New';
        font-weight: 800;
        text-align: center;
        margin: 30px 0px 30px 0;
        text-align: center;
        text-shadow: 2px 2px 4px #000000;
    }

    table {
        border-collapse: collapse;
        width: 800px;
        margin: 0 auto;
        background-color: #E6F0F5;
        border-radius: 10px;
    }

    th, td {
        padding: 10px;
        text-align: center;
        font-weight: bold;
    }

    th {
        background-color: #0360AB;
        color: #FFFFFF;
    }

    tr:nth-child(even) {
        background-color: #F2F9FF;
    }

    tr:nth-child(odd) {
        background-color: #D5EAF7;
    }
</style>

@if (Model != null)
{
    <h1>Resultado de Atualização da Ocorrência</h1>

    <table>
        <tr>
            <th>Mensagem</th>
            <th>Status</th>
        </tr>
        <tr>
            <td>@Model.SituacaoRetorno</td>
            <td>@Model.Status</td>
        </tr>
    </table>
}
else
{
    <p>Nenhum resultado encontrado.</p>
}
