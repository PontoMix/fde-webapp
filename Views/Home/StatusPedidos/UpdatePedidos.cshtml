@{
    ViewData["Title"] = "Atualizar Status Pedido";
}

<!--ESTILO DOS FORMULÁRIOS-->
<style>
    body {
        background-color: skyblue;
        font-family: Gadugi;
    }

    .page_title {
        color: whitesmoke;
        font-family: 'Courier New';
        font-weight: 800;
        text-align: center;
        margin: 30px 0px 30px 0;
        margin-top: 50px;
        margin-bottom: 30px;
        text-align: center;
        text-shadow: 2px 2px 4px #000000;
    }

    #form_UpdatePedido {
        margin: 50px 0px 60px 0px;
        border: solid 10px;
        border-color: #0360AB;
        font-weight: 800;
        margin: 0 auto;
        width: 800px;
        height: 600px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #59B0F9;
        border-radius: 10px;
        padding: 20px;
    }

    #form_UpdatePedidoDetalhado {
        border: solid 10px;
        border-color: #0360AB;
        font-weight: 800;
        margin: 0 auto;
        width: 800px;
        height: 600px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #59B0F9;
        border-radius: 10px;
        padding: 20px;
    }

    input {
        margin: 20px 0px 30px 0px;
        width: 800px;
        height: 40px;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        border-radius: 5px;
        border-color: #B3DFFD;
    }

    .btn-primary {
        margin-top: 10px;
        font-weight: 800;
        width: 400px;
        height: 50px;
        border-radius: 5px;
        background-color: #AB221D;
        border: solid 5px;
        border-color: #89CFF0;
    }
</style>

<h1 class="page_title">Atualizar Status do Pedido</h1>
<h1 class="page_title">(Informar baixas como um todo)</h1>
<!--ATUALIZAR STATUS PEDIDO-->
<form id="form_UpdatePedido" method="post" action="/Home/ProcessarUpdatePedido">
    <div class="form-group">
        <label for="numeroPedido">Número do Pedido:</label>
        <input type="text" class="form-control" id="numeroPedido" name="numeroPedido"/>
    </div>
    <div class="form-group">
        <label for="SituacaoPedido">Alterar Situação do Pedido:</label>
        <select class="form-control" id="SituacaoPedido" name="SituacaoPedido">
            <option value="0">Default</option>
            <option value="1">Entrega Autorizada</option>
            <option value="2">Saiu Para Entrega</option>
            <option value="3">Entregue</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>


<h1 class="page_title">Atualizar Status do Pedido Detalhado</h1>
<h1 class="page_title">(Informar baixa em um item determinado)</h1>
<!--ATUALIZAR STATUS PEDIDO DETALHADO-->
<form id="form_UpdatePedidoDetalhado" method="post" action="/Home/ProcessarUpdatePedidoDetalhado">
    <div class="form-group">
        <label for="numeroPedido">Número do Pedido:</label>
        <input type="text" class="form-control" id="numeroPedido" name="numeroPedido" />
    </div>
    <div class="form-group">
        <label for="numeroPedidoDetalhado">Número do Pedido Ocorrência:</label>
        <input type="text" class="form-control" id="numeroPedidoDetalhado" name="numeroPedidoDetalhado" />
    </div>
    <div class="form-group">
        <label for="SituacaoPedido">Alterar Situação do Pedido:</label>
        <select class="form-control" id="SituacaoPedido" name="SituacaoPedido">
            <option value="0">Default</option>
            <option value="1">Entrega Autorizada</option>
            <option value="2">Saiu Para Entrega</option>
            <option value="3">Entregue</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>
